{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontSize": 13,
  "editor.fontFamily": "'Noto Mono', 'Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
  // make underscores visible in terminal
  "window.zoomLevel": 0,
  "explorer.confirmDragAndDrop": false,
  // don't jump to open file in explorer
  "explorer.autoReveal": false,
  "terminal.integrated.rendererType": "dom",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true,
    "**/.cache.mk": true,
    "**/__pycache__": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/build/**": true,
    "**/out/**": true,
    "**/bin/**": true,
    "**/lib64/**": true
  },
  "search.followSymlinks": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.sideBar.location": "right",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "workbench.colorCustomizations": {},
  "gitlens.views.repositories.location": "scm",
  "gitlens.views.fileHistory.location": "explorer",
  "gitlens.views.lineHistory.location": "explorer",
  "gitlens.views.compare.location": "gitlens",
  "gitlens.views.search.location": "gitlens",
  "terminal.integrated.shell.linux": "/bin/zsh",
  "editor.detectIndentation": false,
  "python.jediEnabled": false,
  "[groovy]": {
    "editor.defaultFormatter": "NicolasVuillamy.vscode-groovy-lint"
  },
  "workbench.iconTheme": "material-icon-theme",
  "python.languageServer": "Microsoft",
  "python.formatting.autopep8Args": [
    "--max-line-length=200",
    "--indent-size=2"
  ],
  "workbench.editorAssociations": [
    {
      "viewType": "jupyter.notebook.ipynb",
      "filenamePattern": "*.ipynb"
    }
  ]
}